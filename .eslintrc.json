{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "root": true, //The root property indicates that this configuration is the root of the project.
    // SLint is limited to a specific project and stops looking in parent folders.
    "extends": [
        //The extends allows to add rules to the configuration.
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off"
    }
}
